{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "noEmit": true,
    "outDir": "./out"
  },
  "include": ["**/*.js"],
  "exclude": ["node_modules", "dist", "out"],
  "compileOnSave": false
}
